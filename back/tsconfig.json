{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",

    // Bundler mode
    "moduleResolution": "nodeNext",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "checkJs": false,
    "noEmitOnError": false,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["."],
      "@payload-config": ["src/db/payload.config.ts"]
    },

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
