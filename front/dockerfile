FROM node:22.17.0-alpine

ARG NEXT_PUBLIC_BACKEND_URL 
ARG NEXT_PUBLIC_STATIC_URL

ENV NEXT_PUBLIC_BACKEND_URL=$NEXT_PUBLIC_BACKEND_URL
ENV NEXT_PUBLIC_STATIC_URL=$NEXT_PUBLIC_STATIC_URL


WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .


RUN npm run build
EXPOSE 3000
CMD ["npm", "run", "start"]